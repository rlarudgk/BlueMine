	// 안읽은 내 알람 리스트
	$.ajax({
		url : '${pageContext.request.contextPath}/project/alarmList/',
		type : 'GET',
        dataType : 'json',
		success : function(resp) {
			console.log("resp",resp)
			 $.each(resp,function(i,v){
				var data = v.memName+","+v.alContCd+","+v.alNo+","+v.alSdate; 
				onMessage(data)
			 });
		}
