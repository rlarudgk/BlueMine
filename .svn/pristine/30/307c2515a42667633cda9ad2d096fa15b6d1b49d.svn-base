	// 드롭다운 토글처리
	$(function() {
		$(".accountBtn").bind("click", function() {

			if ($(".accountBtn").val() == 0) {
				$(".accountBtn").val(1);
			} else {
				$(".accountBtn").val(0);
			}
			var acc = $(".accountBtn").val();
			if (acc == 1) {
				// Button 보이기
				$(".mypage").show();
				$(".alerts").hide();
				$(".alarmBtn").val(0);
			} else if (acc == 0) {
				// Button 숨기기
				$(".mypage").hide();
			}
		});
		$(".alarmBtn").bind("click", function() {
			if ($(".alarmBtn").val() == 0) {
				$(".alarmBtn").val(1);
			} else {
				$(".alarmBtn").val(0);
			}
			var al = $(".alarmBtn").val();
			if (al == 1) {
				// Button 보이기
				$(".alerts").show();
				$(".mypage").hide();
				$(".accountBtn").val(0);
			} else if (al == 0) {
				// Button 숨기기
				$(".alerts").hide();
			}
		});
	});
</script>
