// 			console.log("client : ",client);
// 			publishMessage.call(client, $chatRoom, `/app/mockChat/${chatroomNo}/chatting`, $chatings);
			
// 		}
		
		
		$(".chatDeleteBtn").on("click",function(){
			console.log(this);
			let chatroomNo = $(this).attr("id");
			
